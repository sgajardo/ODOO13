                        <field name="budget_id" invisible="1"/>
                        <field name="display_type" required="1" widget="radio"/>
                    </group>
                    <group>
<!--
                        <field name="total_type" widget="radio"/>
-->
                        <field name="text"/>
<!--
                        <div class="oe_grey" colspan="2">
                            <p>
