<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <!-- bim.gantt.export form view -->
    <record id="bim_gantt_export_view_form" model="ir.ui.view">
        <field name="name">bim.gantt.export.view.form</field>
        <field name="model">bim.gantt.export</field>
        <field name="arch" type="xml">
            <form string="Exportar Gantt">
                <group>
                    <group>
                        <field name="budget_id" invisible="1"/>
                        <field name="gantt_type" widget="radio"/>
                    </group>
                </group>
                <footer>
                    <button name="cancel" string="Cancelar" special="cancel" class="btn-secondary"/>
                    <button name="print_xml" type="object" string="Exportar" class="btn-primary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
