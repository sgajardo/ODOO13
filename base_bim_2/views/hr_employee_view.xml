<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        
        <record id="view_inherit_hr_employee_form" model="ir.ui.view">
            <field name="name">view.inherit.hr.employee_form</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='mobile_phone']" position="after">
                    <field name="wage_bim"/>
                    <field name="hour_cost"/>
                    <field name="default_bim_project"/>
                </xpath>

            </field>
        </record>


    </data>
</odoo>
