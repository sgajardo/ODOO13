<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="payroll_account_payroll_configuration_form_view" model="ir.ui.view">
        <field name="name">payroll.account.payroll.configuration.form.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div id="hr_payroll_accountant" position="inside">
                <div class="col-lg-6 col-12 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Diario</span>
                        <div class="text-muted">
                            Diario usado en las centralizaciones
                        </div>
                        <div class="content-group">
                            <field name="default_journal_id" class="o_light_label mt16" options="{'no_create': 1, 'no_open': 1}"/>
                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
